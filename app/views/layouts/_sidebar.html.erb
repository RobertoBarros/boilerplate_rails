<div data-controller="sidebar">
  <%# -------------------------- %>
  <%# ----- MOBILE SIDEBAR ----- %>
  <%# -------------------------- %>
  <div class="relative z-40 hidden" role="dialog" aria-modal="true" data-sidebar-target="container">
    <div class="fixed inset-0 bg-gray-900/80" aria-hidden="true" data-sidebar-target="backdrop"
      data-sidebar-target="backdrop"
      data-transition-enter="ease-in-out duration-500"
      data-transition-enter-start="opacity-0"
      data-transition-enter-end="opacity-100"
      data-transition-leave="ease-in-out duration-500"
      data-transition-leave-start="opacity-100"
      data-transition-leave-end="opacity-0"></div>
    <div class="fixed inset-0 flex">
      <div class="relative mr-16 flex w-full max-w-xs flex-1"
        data-sidebar-target="panel"
        data-transition-enter="transition ease-in-out duration-300 transform"
        data-transition-enter-start="-translate-x-full"
        data-transition-enter-end="translate-x-0"
        data-transition-leave="transition ease-in-out duration-300 transform"
        data-transition-leave-start="translate-x-0"
        data-transition-leave-end="-translate-x-full">
        <div class="absolute left-full top-0 flex w-16 justify-center pt-5">
          <button type="button" class="-m-2.5 p-2.5"
            data-sidebar-target="close"
            data-action="click->sidebar#close"
            data-transition-enter="ease-in-out duration-300"
            data-transition-enter-start="opacity-0"
            data-transition-enter-end="opacity-100"
            data-transition-leave="ease-in-out duration-300"
            data-transition-leave-start="opacity-100"
            data-transition-leave-end="opacity-0">
            <span class="sr-only">Close sidebar</span>
            <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-gray-100 px-6 pb-2">
          <%= render 'layouts/sidebar_content' %>
        </div>
      </div>
    </div>
  </div>
  <%# --------------------------- %>
  <%# ----- DESKTOP SIDEBAR ----- %>
  <%# --------------------------- %>
  <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
    <div class="flex grow flex-col gap-y-5 overflow-y-auto border-r border-gray-200 bg-gray-100 px-6">
      <%= render 'layouts/sidebar_content' %>
    </div>
  </div>
  <%# ------------------------- %>
  <%# ----- HEADER MOBILE ----- %>
  <%# ------------------------- %>
  <div class="sticky top-0 z-30 flex items-center gap-x-6 bg-gray-100 px-4 py-4 shadow-sm sm:px-6 lg:hidden">
    <button type="button" class="-m-2.5 p-2.5 text-gray-700 lg:hidden" data-action="click->sidebar#open">
      <span class="sr-only">Open sidebar</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
    <div class="flex-1 text-sm font-semibold leading-6 text-gray-900">App Name</div>
  </div>
</div>
