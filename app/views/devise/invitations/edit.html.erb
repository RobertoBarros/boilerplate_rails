<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Confirmar Convite</h2>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put , class: "space-y-6" } do |f| %>
      <%= f.hidden_field :invitation_token, readonly: true %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div>
        <%= f.label :password %>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500">MÃ­nimo de <%= @minimum_password_length %> caracteres</em>
          <% end %>
        </div>
      </div>
      <div>
        <%= f.label :password_confirmation %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
      <div>
        <%= f.submit "Cadastrar" %>
      </div>
    <% end %>
  </div>
