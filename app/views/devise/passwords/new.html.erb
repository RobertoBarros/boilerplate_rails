<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Esqueceu sua senha?</h2>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" } do |f| %>
      <div>
        <%= f.label :email %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
      <div>
        <%= f.submit "Enviar e-mail de recuperação de senha" %>
      </div>
    <% end %>
    <p class="mt-10 text-center text-sm text-gray-500">
      Não tem uma conta?
      <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
    </p>
    <p class="mt-5 text-center text-sm text-gray-500">
      Possui uma conta?
      <%= link_to "Entrar", new_session_path(resource_name), class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
