<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Alterar senha</h2>
  </div>
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" } do |f| %>
      <%= f.hidden_field :reset_password_token, value: resource.reset_password_token %>
      <%= f.error_message :reset_password_token %>
      <div>
        <%= f.label :password, "Nova senha" %>
        <div class="mt-2">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>
      </div>
      <div>
        <%= f.label :password_confirmation, "Repetir nova senha" %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
      <div>
        <%= f.submit "Salvar" %>
      </div>
    <% end %>
  </div>
</div>
